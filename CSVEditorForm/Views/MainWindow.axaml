<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CSVEditorForm.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CSVEditorForm.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="CSVEditorForm">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<StackPanel>
		<!--<TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" />-->
		<DockPanel>
			<Button>Open File</Button>
			<Button>Save Current File</Button>
			<Button>Save As</Button>

			<CheckBox>Add Quotation Marks</CheckBox>
		</DockPanel>

		<DataGrid Name="FixedData" AutoGenerateColumns="True" Items="{Binding People}" />
		<DataGrid Name="CSVData" AutoGenerateColumns="True" Items="{Binding DynamicCSV}" />
	</StackPanel>
</Window>